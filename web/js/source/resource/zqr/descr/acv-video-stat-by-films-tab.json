{
    type : "table",
    toolbar : [
        {type : "back"},
        
        {type : "button",
            name : "Обновить",
            action : "/get-all-acv-video-stats",
            //icon : "icon/32/actions/edit-redo.png",
            icon : "icon/32/actions/view-refresh.png",
            specParam: "tab-change-state-action"},
            
        {type : "button",
            name : "Подробнее",
            action : "resource/zqr/descr/acv-video-stat-by-film-tab.json",
            icon : "icon/32/actions/zoom-in.png",
            specParam: "tab-row"
        }
    ],
    columns : [
        {name : "video_url", alias : "Урл", type : "string", sortable : true},
        {name : "video_name", alias : "Название", type : "string", sortable : true},
        {name : "shows", alias : "Показан", type : "string", sortable : true},
        {name : "clicks", alias : "Клики", type : "string", sortable : true}
    ],

    filter : {
        fields : [
            {name : "fromdate", alias : "с даты", input : {type : "date-field-md"}},
            {name : "todate", alias : "по дату", input : {type : "date-field-pd"}}
        ],
        render : "horisontal",
        submit_url : "/get-acv-video-stat/by-films"
    },
    
    index_name : ["id"],
    sort : "shows",
    ascending : false,

    dblclick_action : "resource/zqr/descr/acv-video-stat-by-film-tab.json"
}
