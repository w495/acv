{
    type : "table",
    toolbar : [
        {type : "button",
            name : "Обновить",
            action : "/get-all-acv-video-stats",
            icon : "icon/32/actions/view-refresh.png",
            specParam: "tab-change-state-action"},
                
        {type : "button", name : "Создать",
            action : "resource/bsk/descr/acv-video-create.json",
            icon : "icon/32/actions/document-new.png"},

        {type : "button", name : "Копировать",
            action : "resource/bsk/descr/acv-video-copy.json",
            icon : "icon/32/actions/edit-copy.png",
            specParam: "tab-row"},
          
        {type : "button",
            name : "Разрешить",
            action : "/activate-acv-video",
            icon : "icon/32/actions/dialog-apply.png",
            specParam: "tab-row-action"
        },
        
        {type : "button",
            name : "Запустить",
            action : "/start-acv-video",
            icon : "icon/32/actions/media-playback-start.png",
            specParam: "tab-row-action"
        },
        
        {type : "button",
            name : "Остановить",
            action : "/stop-acv-video",
            icon : "icon/32/actions/media-playback-stop.png",
            specParam: "tab-row-action"
        },
        
        {type : "button",
            name : "Запретить",
            action : "/disactivate-acv-video",
            icon : "icon/32/actions/dialog-close.png",
            specParam: "tab-row-action"
        },
        
        {type : "button",
            name : "Удалить",
            // action : "/full-delete-acv-video", // полное удаление
            action : "/delete-acv-video",   // сокрытие
            icon : "icon/32/actions/edit-delete.png",
            specParam: "tab-row-action",
            confirmMsg :
                "Уверены ли вы в том что хотите удалить рекламную компанию?"
        }
    ],
    columns : [
        {name : "id",       alias : "#", type : "float", sortable : true, width:"5%"},
        {name : "name",     alias : "Название", type : "string", sortable : true},
        {name : "shown",    alias : "Показов", type : "string", sortable : true},
        {name : "clicks",   alias : "Кликов", type : "string", sortable : true},
        
        {name : "active",   alias : "Разрешена",      type : "enum", 
            dict: {  "true":    "Разрешена",
                     "false":   "Запрещена",
                     "":        "Непросмотрена",
                    default: "Неопределено"}, sortable : true},

        {name : "stoped",   alias : "Запущена",      type : "enum", 
            dict: {  "true":    "Остановлена",
                     "false":   "Запущена",
                    default:    "Неопределено"}, sortable : true},
                    
        {name : "datestart", alias : "Дата начала", type : "erl_datetime", sortable : true},
        {name : "datestop", alias : "Дата конца", type : "erl_datetime", sortable : true}
    ],

    filter : {
        submit_url : "/get-all-acv-videos"
    },

    // sort : "datatime",
    sort : "id",
    ascending : false,

    dblclick_action : "resource/bsk/descr/acv-video-show-mod.json"
}
