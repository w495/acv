{
    type : "table",
    toolbar : [
        {type : "button", name : "Показать график", action : "resource/bsk/descr/activity-grouped-report-chart.json", icon : "icon/32/apps/office-chart.png"}
    ],
    columns : [
        {name : "start_time", alias : "Календарный период", type : "string", sortable : true},
        {name : "wtime", alias : "Хронометраж", type : "sec", sortable : true, width : 100},
        {name : "watches", alias : "Просмотров", type : "int", sortable : true, width : 90},
        {name : "advshows", alias : "Показы рекламы", type : "int", sortable : true},
        {name : "advclicks", alias : "Clicks", type : "int", sortable : true}
    ],

    filter : {
        fields : [
            {name : "fromdate", alias : "с даты", input : {type : "date-field"}},
            {name : "todate", alias : "по дату", input : {type : "date-field"}},
            {name : "group_by", alias : "суммирование результатов", input : {
                type : "select-box",
                select_id : "id",
                select_display_name : "alias",
                values : [
                    {id : "hour", alias : "по часам суток"},
                    {id : "day", alias : "по числам  месяца"},
                    {id : "weekday", alias : "по дням недели"},
                    {id : "month", alias : "по месяцам"}
                ]
            }},
        ],
        buttons : [
          /* {alias : "отчет в csv", url : "/csv/activity"},
           {alias : "отчет в html", url : "/html/activity"} */
        ],
        render: "horisontal",
        submit_url : "/activity"
    },

    sort : "start_time",
    ascending : false


//    dblclick_action : "resource/bsk/descr/videoviewreport-tab.json"
}
