{
  "name"    : "mobileshowcase",

  "include" :
  [
    {
      "path" : "${QOOXDOO_PATH}/tool/data/config/application.json"
    }
  ],

  "export" :
  [
    "api",
    "api-data",
    "build",
    "clean",
    "distclean",
    "fix",
    "info",
    "lint",
    "migration",
    "pretty",
    "profiling",
    "simulation-build",
    "simulation-run",
    "source",
    "source-all",
    "test",
    "test-source",
    "translation",
    "minify-css"
  ],
  
  "default-job" : "source",

  "let" :
  {
    "APPLICATION"  : "mobileshowcase",
    "QOOXDOO_PATH" : "../..",
    "LOCALES"      : [ "en" ],
    "CACHE"        : "${TMPDIR}/qx${QOOXDOO_VERSION}/cache",
    "ROOT"         : "."
  },

  "config-warnings" : 
  {
    "job-shadowing" : ["source-all-script", "build-files", "common", "simulation-run"]
  },

  "jobs" :
  {
    "common" :
    {
      "=include" :
      [
        "${APPLICATION}.Application"
      ],
      
      "environment" :
      {
        "qx.version"     : "${QOOXDOO_VERSION}",
        "qx.application" : "${APPLICATION}.Application",
        "qx.mobile.emulatetouch" : true,
        "qx.mobile.nativescroll" : false,
        "engine.name" : "webkit"
      }
    },


    "build-files" :
    {
      "run" : ["minify-css"],
      
      "copy-files" :
      {
        "files" :
        [
          "index-ios.html",
          "index.html"
        ],

        "source" : "${ROOT}/source/resource",
        "target" : "${BUILD_PATH}"
      }
      },


    "source-all-script" :
    {
      "=exclude" : 
      [
        "qx.test.*",
        "${APPLICATION}.test.*"
      ]
    },

    "minify-css" :
    {
      "let" :
      {
        "BUILD_PATH"  : "${ROOT}/build",
        "CATCMD" : "cat"
      },

      "shell" :
      {
        "command" :
        [
          "${CATCMD} ${QOOXDOO_PATH}/framework/source/resource/qx/mobile/css/common/main.css ${QOOXDOO_PATH}/framework/source/resource/qx/mobile/css/android/android.css | ${QOOXDOO_PATH}/tool/bin/cssmin.py > ${BUILD_PATH}/resource/qx/mobile/css/android/android-styles-min.css",
          "${CATCMD} ${QOOXDOO_PATH}/framework/source/resource/qx/mobile/css/common/main.css ${QOOXDOO_PATH}/framework/source/resource/qx/mobile/css/ios/ios.css | ${QOOXDOO_PATH}/tool/bin/cssmin.py > ${BUILD_PATH}/resource/qx/mobile/css/ios/ios-styles-min.css"
        ]
      }

    },

    "simulation-run" :
    {
      "environment" :
      {
        "simulator.selServer"   : "${SELENIUM_SERVER}",
        "simulator.selPort"     : "${SELENIUM_PORT}",
        "simulator.testBrowser" : "${SELENIUM_BROWSER}",
        "simulator.autHost"     : "${AUT_HOST}",
        "simulator.autPath"     : "${AUT_PATH}",
        "simulator.applicationLog" : true,
        "simulator.globalErrorLogging" : true
      }
    }
  }
}
